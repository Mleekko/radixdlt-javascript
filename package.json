    "@types/bn.js": "^5.1.0",
    "@types/elliptic": "^6.4.14",
    "@types/hdkey": "^2.0.0",
    "@types/node-forge": "^0.10.10",
    "axios": "^0.24.0",
    "axios-mock-adapter": "^1.20.0",
    "babel-jest": "^27.4.5",
    "bech32": "^2.0.0",
    "bignumber.js": "^9.0.1",
    "bip39": "^3.0.4",
    "bn.js": "^5.2.0",
    "elliptic": "^6.5.4",
    "ethereum-public-key-to-address": "^0.0.5",
    "hdkey": "^2.0.1",
    "loglevel-plugin-prefix": "^0.8.4",
    "long": "^5.1.0",
    "neverthrow": "^4.3.1",
    "node-forge": "^0.10.0",
    "open-rpc-utils": "^1.1.1",
    "prelude-ts": "^1.0.3",
    "ramda": "^0.27.1",
    "rxjs": "^7.4.0",
